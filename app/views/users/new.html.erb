<% if flash[:notice] %>
    <h4><%= flash[:notice] %></h4>
<% end %>
<h2>Signup Page</h2>
<%= form_for @user do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %><br><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br><br>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %><br><br>

    <%= f.submit "create" %>

<% end %>